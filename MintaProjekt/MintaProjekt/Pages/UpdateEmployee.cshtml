@page
@model MintaProjekt.Pages.UpdateEmployeeModel
@{
}

<h2>Update Employee</h2>

<form method="post" asp-page-handler="Select">
    <div>
        <label for="EmployeeID">Enter Employee ID:</label>
        <input type="number" id="EmployeeID" asp-for="EmployeeID" />
    </div>
    <button type="submit">Select</button>
</form>

<form method="post" asp-page-handler="Update">
        <div>
            <label for="FirstName">First Name:</label>
            <input type="text" id="FirstName" asp-for="SelectedEmployee.FirstName"/>
        </div>
        <div>
            <label for="LastName">Last Name:</label>
            <input type="text" id="LastName" asp-for="SelectedEmployee.LastName" />
        </div>
        <div>
            <label for="Email">Email:</label>
            <input type="email" id="Email" asp-for="SelectedEmployee.Email" />
        </div>
        <div>
            <label for="PhoneNumber">Phone Number:</label>
            <input type="text" id="PhoneNumber" asp-for="SelectedEmployee.PhoneNumber" />
        </div>
        <div>
            <label for="HireDate">Hire Date:</label>
            <input type="date" id="HireDate" asp-for="SelectedEmployee.HireDate" />
        </div>
        <div>
            <label for="JobTitle">Job Title:</label>
            <input type="text" id="JobTitle" asp-for="SelectedEmployee.JobTitle" />
        </div>
        <div>
            <label for="DepartmentID">Department ID:</label>
            <input type="number" id="DepartmentID" asp-for="SelectedEmployee.DepartmentID" />
        </div>
        <button type="submit">Update Employee</button>
</form>

<a asp-page="/Index">Cancel</a>